<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
    xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="company" transaction-type="RESOURCE_LOCAL">
        <class>Model.porder</class><!-- Entity Manager Class Name -->
        <class>Model.member</class><!-- Entity Manager Class Name -->
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" /><!-- Database Driver Name -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3307/company" /> <!-- Database Url -->
            <property name="javax.persistence.jdbc.user" value="root" /><!-- Database Username -->
            <property name="javax.persistence.jdbc.password" value="1234" /><!-- Database password -->
        </properties>
    </persistence-unit>
</persistence>